<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/branch_live1"
    android:elevation="4dp"
    android:clickable="true"
    android:background="@drawable/shadow"
    android:layout_marginRight="15dp">
    <RelativeLayout
        android:id="@+id/branch_live"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:textColor="#57BBB2"
            android:textStyle="bold"
            android:text=""/>
        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#111"
            android:layout_below="@id/text_question"
            android:text=""/>
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/text_user"
            android:textStyle="italic"
            android:textColor="#111"
            android:text=""/>
        <TextView
            android:id="@+id/text_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:textColor="#A8D670"
            android:text=""/>
        <TextView
            android:id="@+id/text_user_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#111"
            android:layout_below="@id/text_solution"
            android:text=""/>
        <TextView
            android:id="@+id/text_date_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#111"
            android:layout_below="@id/text_user_solution"
            android:textStyle="italic"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>