<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InstructionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">
            <RelativeLayout
                android:id="@+id/layout_textname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp">
            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="Subject Name"
                android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_instruction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2DDFDADA"
                android:layout_below="@id/layout_textname">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="7dp"
                    android:padding="8dp"
                    android:textColor="#111"
                    android:textStyle="bold"
                    android:text="Please read the Following instructions very carefully"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text1"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="1. You have 20 Minutes to complete the test."/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text2"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="2. The test contains a total of 10 questions for 20 marks."/>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text3"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="3. There is only one correct answer to each question.Click on the most appropriate option to mark it as your answer."/>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text4"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="4. There is 1/3 penalty for each wrong answer."/>
                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text5"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="5. You can chnage your answer by clicking on the Clear Response Button."/>
                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text6"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="6. A number list of all questions appears at the right-hand side of the screen ."/>
                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text7"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="7.  You can use rough sheets while taking the test.Do Not use calculators,log tables any references material during test  ."/>
                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_below="@id/text8"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_marginBottom="70dp"
                    android:text="8. Do not click the button Submit Test before completing the test.A test once submitted cannnot be resumed ."/>
<!--                <TextView-->
<!--                    android:id="@+id/text10"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="7sp"-->
<!--                    android:layout_below="@id/text9"-->
<!--                    android:textSize="15sp"-->
<!--                    android:padding="5dp"-->
<!--                    android:text="8. Do not click the button Submit Test before completing the test.A test once submitted cannnot be resumed ."/>-->

<!--                <TextView-->
<!--                    android:id="@+id/text11"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="7sp"-->
<!--                    android:layout_below="@id/text10"-->
<!--                    android:textSize="15sp"-->
<!--                    android:padding="5dp"-->
<!--                    android:text="8. Do not click the button Submit Test before completing the test.A test once submitted cannnot be resumed ."/>-->

            </RelativeLayout>



        </RelativeLayout>





    </ScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="@drawable/bottom_layout">
        <RelativeLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="25dp">
<!--            <ImageView-->
<!--                android:id="@+id/image_home"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:src="@drawable/home_color"-->
<!--                />-->
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Language"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#3F51B5"/>
            <Spinner
                android:id="@+id/select_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentTop="true"
                android:entries="@array/language" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_start_test"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_toRightOf="@id/layout_home">
            <ImageView
                android:id="@+id/image_history"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/ic_history_black_24dp"
                />
            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START TEST"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_history"
                android:layout_centerInParent="true"
                android:textColor="#fff"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>