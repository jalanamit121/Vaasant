<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.winbee.vasantvalleyschool.helper.VideoEnabledWebView
        android:id="@+id/andExoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_below="@id/andExoPlayerView">

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/edit_text"
            android:layout_marginStart="5sp"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/txt_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/edit_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_subject"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/txt_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/edit_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_topic"
            android:textSize="19sp"/>
    </RelativeLayout>

</RelativeLayout>