<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg_color"
    tools:context=".OtpVerficationActivity">
    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/text_verificaion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:layout_marginStart="120dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111"/>

        <TextView
            android:id="@+id/text_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Please Type the verification code sent to"
            android:layout_marginStart="30dp"
            android:layout_below="@id/text_verificaion"
            android:textSize="16sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/text_mobile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Registered Mobile no"
            android:layout_marginStart="105dp"
            android:layout_below="@id/text_mobile"
            android:textSize="16sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/text_mobile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""
            android:layout_marginStart="105dp"
            android:layout_below="@id/text_mobile2"
            android:textSize="16sp"
            android:textColor="#111"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/edit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularbluebordersolidmiddle"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/text_layout"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:padding="18dp">

        <EditText
            android:id="@+id/link_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Enter OTP"
            android:textColor="@color/edit_text"
            android:inputType="text"
            android:textColorHint="@color/edit_text"
            android:textSize="14sp" />

    </LinearLayout>
    <Button
        android:id="@+id/buttonOtp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/circularbluebordersolid"
        android:fontFamily="@font/proximanovaregular"
        android:layout_below="@id/edit_otp"
        android:padding="16dp"
        android:text="Validate"
        android:layout_centerInParent="true"
        android:textColor="@color/white" />




</RelativeLayout>